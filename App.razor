@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using CheckWebAssembly.Shared
@using CheckWebAssembly.Services
@inject IJSRuntime JSRuntime

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Check Extension</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="not-found">
                <h3>Page not found</h3>
                <p>Sorry, there's nothing at this address.</p>
            </div>
        </LayoutView>
    </NotFound>
</Router>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize extension context based on URL parameters
            await InitializeExtensionContext();
        }
    }

    private async Task InitializeExtensionContext()
    {
        try 
        {
            var uri = await JSRuntime.InvokeAsync<string>("location.href");
            var parsedUri = new Uri(uri);
            var query = System.Web.HttpUtility.ParseQueryString(parsedUri.Query);
            var view = query["view"];

            if (!string.IsNullOrEmpty(view))
            {
                await JSRuntime.InvokeVoidAsync("CheckExtension.setContext", view);
                
                // Set appropriate styling based on context
                switch (view.ToLower())
                {
                    case "popup":
                        await JSRuntime.InvokeVoidAsync("document.body.classList.add", "popup-context");
                        break;
                    case "options":
                        await JSRuntime.InvokeVoidAsync("document.body.classList.add", "options-context");
                        break;
                }
            }
        }
        catch (Exception ex)
        {
            // Silently handle initialization errors
            await JSRuntime.InvokeVoidAsync("console.warn", $"Extension context initialization failed: {ex.Message}");
        }
    }
}

<style>
    .not-found {
        text-align: center;
        padding: 2rem;
        color: #666;
    }
</style>
@page "/?view=popup"
@using CheckWebAssembly.Services
@using CheckWebAssembly.Models
@inject IConfigurationManager ConfigManager
@inject IJSRuntime JSRuntime

<PageTitle>Check Status</PageTitle>

<div class="popup-container">
    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Loading status...</p>
        </div>
    }
    else
    {
        <!-- Status Section -->
        <div class="status-section">
            <div class="status-indicator @(extensionEnabled ? "enabled" : "disabled")">
                <div class="status-dot"></div>
                <span class="status-text">
                    @(extensionEnabled ? "Protection Enabled" : "Protection Disabled")
                </span>
            </div>
            
            @if (!extensionEnabled)
            {
                <button class="btn-primary" @onclick="EnableExtension">
                    Enable Protection
                </button>
            }
        </div>

        <!-- Current Page Info -->
        <div class="page-info">
            <h3>Current Page</h3>
            <div class="page-details">
                <div class="page-url">@currentUrl</div>
                <div class="security-status @securityStatusClass">
                    <span class="security-icon">@securityIcon</span>
                    @securityMessage
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="stats-section">
            <div class="stat-item">
                <div class="stat-number">@stats.BlockedThreats</div>
                <div class="stat-label">Threats Blocked</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">@stats.ScannedPages</div>
                <div class="stat-label">Pages Scanned</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="actions-section">
            <button class="btn-secondary" @onclick="OpenOptions">
                <span class="btn-icon">‚öôÔ∏è</span>
                Settings
            </button>
            <button class="btn-secondary" @onclick="RefreshStatus">
                <span class="btn-icon">üîÑ</span>
                Refresh
            </button>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private bool extensionEnabled = true;
    private string currentUrl = "";
    private string securityMessage = "Checking...";
    private string securityStatusClass = "checking";
    private string securityIcon = "üîç";
    
    private ExtensionStats stats = new() { BlockedThreats = 0, ScannedPages = 0 };

    protected override async Task OnInitializedAsync()
    {
        await LoadStatus();
    }

    private async Task LoadStatus()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Load configuration
            var config = await ConfigManager.GetConfigAsync();
            extensionEnabled = config.ExtensionEnabled;

            // Get current tab info
            await GetCurrentPageInfo();

            // Load statistics
            await LoadStatistics();

            // Check page security status
            await CheckPageSecurity();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to load status: {ex.Message}");
            securityMessage = "Failed to load status";
            securityStatusClass = "error";
            securityIcon = "‚ùå";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task GetCurrentPageInfo()
    {
        try
        {
            // This would normally get the current active tab
            // For now, we'll show a placeholder
            currentUrl = "Current page URL will be shown here";
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to get current page: {ex.Message}");
            currentUrl = "Unable to determine current page";
        }
    }

    private async Task LoadStatistics()
    {
        try
        {
            // Load statistics from storage or service
            // For now, using placeholder values
            stats.BlockedThreats = 15;
            stats.ScannedPages = 247;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to load statistics: {ex.Message}");
        }
    }

    private async Task CheckPageSecurity()
    {
        try
        {
            // Check if current page is secure
            // This is a placeholder - would normally check against detection rules
            securityMessage = "Page appears safe";
            securityStatusClass = "safe";
            securityIcon = "‚úÖ";
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to check page security: {ex.Message}");
            securityMessage = "Unable to verify page security";
            securityStatusClass = "unknown";
            securityIcon = "‚ùì";
        }
    }

    private async Task EnableExtension()
    {
        try
        {
            var config = await ConfigManager.GetConfigAsync();
            config.ExtensionEnabled = true;
            await ConfigManager.SetConfigAsync(config);
            extensionEnabled = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to enable extension: {ex.Message}");
        }
    }

    private async Task RefreshStatus()
    {
        await LoadStatus();
    }

    private async Task OpenOptions()
    {
        await JSRuntime.InvokeVoidAsync("chrome.runtime.openOptionsPage");
    }

    private class ExtensionStats
    {
        public int BlockedThreats { get; set; }
        public int ScannedPages { get; set; }
    }
}


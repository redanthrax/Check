@page "/"
@using CheckWebAssembly.Services
@using CheckWebAssembly.Models
@inject IConfigurationManager ConfigManager
@inject IJSRuntime JSRuntime

<PageTitle>Check Extension Dashboard</PageTitle>

<div class="dashboard-container">
    @if (isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Loading dashboard...</p>
        </div>
    }
    else
    {
        <!-- Welcome Section -->
        <div class="welcome-section">
            <div class="welcome-content">
                <h1>Welcome to Check</h1>
                <p class="subtitle">@brandingConfig.Features.WelcomeMessage</p>
                <div class="protection-status @(config.ExtensionEnabled ? "enabled" : "disabled")">
                    <div class="status-indicator">
                        <div class="status-dot"></div>
                        <span>Protection @(config.ExtensionEnabled ? "Enabled" : "Disabled")</span>
                    </div>
                </div>
            </div>
            <div class="welcome-actions">
                @if (!config.ExtensionEnabled)
                {
                    <button class="btn-primary" @onclick="EnableProtection">
                        <span>üõ°Ô∏è</span>
                        Enable Protection
                    </button>
                }
                <button class="btn-secondary" @onclick="OpenSettings">
                    <span>‚öôÔ∏è</span>
                    Settings
                </button>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üõ°Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-number">@stats.BlockedThreats</div>
                    <div class="stat-label">Threats Blocked</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">üîç</div>
                <div class="stat-content">
                    <div class="stat-number">@stats.ScannedPages</div>
                    <div class="stat-label">Pages Scanned</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">‚ö†Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-number">@stats.SecurityEvents</div>
                    <div class="stat-label">Security Events</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">üìà</div>
                <div class="stat-content">
                    <div class="stat-number">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
            </div>
        </div>

        <!-- Features Overview -->
        <div class="features-section">
            <h2>Active Features</h2>
            <div class="features-grid">
                <div class="feature-item @(config.EnablePageBlocking ? "enabled" : "disabled")">
                    <div class="feature-icon">üö´</div>
                    <div class="feature-content">
                        <h3>Page Blocking</h3>
                        <p>Automatically blocks malicious pages</p>
                        <div class="feature-status">
                            @(config.EnablePageBlocking ? "Active" : "Inactive")
                        </div>
                    </div>
                </div>
                
                <div class="feature-item @(config.EnableContentManipulation ? "enabled" : "disabled")">
                    <div class="feature-icon">üîß</div>
                    <div class="feature-content">
                        <h3>Content Protection</h3>
                        <p>Modifies suspicious content with warnings</p>
                        <div class="feature-status">
                            @(config.EnableContentManipulation ? "Active" : "Inactive")
                        </div>
                    </div>
                </div>
                
                <div class="feature-item @(config.EnableUrlMonitoring ? "enabled" : "disabled")">
                    <div class="feature-icon">üîó</div>
                    <div class="feature-content">
                        <h3>URL Monitoring</h3>
                        <p>Continuously monitors page URLs</p>
                        <div class="feature-status">
                            @(config.EnableUrlMonitoring ? "Active" : "Inactive")
                        </div>
                    </div>
                </div>
                
                <div class="feature-item @(config.ShowNotifications ? "enabled" : "disabled")">
                    <div class="feature-icon">üîî</div>
                    <div class="feature-content">
                        <h3>Notifications</h3>
                        <p>Shows security alerts and warnings</p>
                        <div class="feature-status">
                            @(config.ShowNotifications ? "Active" : "Inactive")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="activity-section">
            <h2>Recent Activity</h2>
            <div class="activity-list">
                @if (recentActivities.Any())
                {
                    @foreach (var activity in recentActivities)
                    {
                        <div class="activity-item @activity.Type.ToLower()">
                            <div class="activity-icon">@activity.Icon</div>
                            <div class="activity-content">
                                <div class="activity-message">@activity.Message</div>
                                <div class="activity-time">@activity.Time.ToString("MMM dd, HH:mm")</div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-activity">
                        <p>No recent activity to display</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private ExtensionConfig config = new();
    private BrandingConfig brandingConfig = new();
    private DashboardStats stats = new();
    private List<ActivityItem> recentActivities = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        try
        {
            isLoading = true;
            
            // Load configuration and branding
            config = await ConfigManager.GetConfigAsync();
            brandingConfig = await ConfigManager.GetFinalBrandingConfigAsync();
            
            // Load statistics
            await LoadStatistics();
            
            // Load recent activity
            LoadRecentActivity();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to load dashboard: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadStatistics()
    {
        // This would normally load from storage or service
        // For now, using sample data
        stats = new DashboardStats
        {
            BlockedThreats = 47,
            ScannedPages = 1247,
            SecurityEvents = 12,
            Uptime = 99.9
        };
    }

    private void LoadRecentActivity()
    {
        // This would normally load from logs or storage
        // For now, using sample data
        recentActivities = new List<ActivityItem>
        {
            new() { Type = "Success", Icon = "‚úÖ", Message = "Extension enabled successfully", Time = DateTime.Now.AddMinutes(-15) },
            new() { Type = "Warning", Icon = "‚ö†Ô∏è", Message = "Suspicious URL detected and blocked", Time = DateTime.Now.AddHours(-2) },
            new() { Type = "Info", Icon = "‚ÑπÔ∏è", Message = "Configuration settings updated", Time = DateTime.Now.AddHours(-4) },
            new() { Type = "Success", Icon = "üõ°Ô∏è", Message = "Phishing attempt blocked", Time = DateTime.Now.AddDays(-1) }
        };
    }

    private async Task EnableProtection()
    {
        try
        {
            config.ExtensionEnabled = true;
            await ConfigManager.SetConfigAsync(config);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to enable protection: {ex.Message}");
        }
    }

    private void OpenSettings()
    {
        // Navigate to settings view
        _ = JSRuntime.InvokeVoidAsync("window.location.assign", "/?view=options");
    }

    private class DashboardStats
    {
        public int BlockedThreats { get; set; }
        public int ScannedPages { get; set; }
        public int SecurityEvents { get; set; }
        public double Uptime { get; set; }
    }

    private class ActivityItem
    {
        public string Type { get; set; } = "";
        public string Icon { get; set; } = "";
        public string Message { get; set; } = "";
        public DateTime Time { get; set; }
    }
}

